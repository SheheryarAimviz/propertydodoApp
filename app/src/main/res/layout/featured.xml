<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_dialog"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Featured"
        android:paddingLeft="23dp"
        android:id="@+id/featuredbutton"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:gravity="left|center_vertical"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Newest"
        android:paddingLeft="23dp"
        android:id="@+id/newestbutton"
        android:textSize="15sp"
        android:background="#fff"
        android:gravity="left|center_vertical"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Price(low)"
        android:paddingLeft="23dp"
        android:textSize="15sp"
        android:id="@+id/priceLowbutton"
        android:background="#fff"
        android:gravity="left|center_vertical"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Price(high)"
        android:paddingLeft="23dp"
        android:id="@+id/priceHighbutton"
        android:textSize="15sp"
        android:background="#fff"
        android:gravity="left|center_vertical"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Beds(least)"
        android:id="@+id/bedEastbutton"
        android:paddingLeft="23dp"
        android:textSize="15sp"
        android:background="#fff"
        android:gravity="left|center_vertical"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Beds(most)"
        android:paddingLeft="23dp"
        android:id="@+id/bedMostbutton"
        android:textSize="15sp"
        android:background="#fff"
        android:gravity="left|center_vertical"/>

</LinearLayout>